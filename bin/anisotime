#!/bin/sh
set -o posix

#Emulates readlink -f hoge
__readlink_f (){
  TARGET_FILE=$1
  if [ "$(echo "$TARGET_FILE" | cut -c 1-2)" = "~/" ]; then
    TARGET_FILE=$HOME/${TARGET_FILE#\~/}
  fi
  while [ "$TARGET_FILE" != "" ]; do
      cd "$(dirname "$TARGET_FILE")" || exit 60
      FILENAME="$(basename "$TARGET_FILE")"
      TARGET_FILE="$(readlink "$FILENAME")"
  done
  if [ "$FILENAME" = "." ]; then
    echo "$(pwd -P)"
  else
    echo "$(pwd -P)/$FILENAME"
  fi
}

if [ -z "$KIBRARY_HOME" ]; then
  export KIBRARY_HOME=$(dirname "$(__readlink_f "$(dirname $0)")")
  printf "KIBRARY_HOME is %s.\n" "$KIBRARY_HOME." 1>&2
fi

if [ -e "$KIBRARY_HOME"/bin/.kibraryrc ]; then
  . "$KIBRARY_HOME"/bin/.kibraryrc -- || return 1
else
  printf "No file for variables. Please reinstall Kibrary.\\n"
  exit 71
fi

if ! javaCheck -r >/dev/null; then
  javaCheck 
  exit 1
fi

"$JAVA" io.github.kensuke1984.anisotime.ANISOtime "$@"
exit $?
