#!/bin/sh
set -o posix

if [ -z "$KIBRARY_HOME" ]; then
  echo "KIBRARY_HOME is not set."
  exit 71
fi

if [ -e "$KIBRARY_HOME"/bin/.kibraryrc ]; then
  . "$KIBRARY_HOME"/bin/.kibraryrc -- || return 1
else
  printf "No file for variables. Please reinstall Kibrary.\\n"
  exit 71
fi

if ! javaCheck -r >/dev/null; then
  javaCheck 
  exit 1
fi

"$JAVA" io.github.kensuke1984.anisotime.ANISOtime "$@"
exit $?
